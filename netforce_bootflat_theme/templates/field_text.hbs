{{#unless options.nolabel}}
    <label class="control-label {{#if horizontal}}col-sm-4{{/if}}">
        {{t string}}
    </label>
{{/unless}}
<div class="{{#if horizontal}}col-sm-8{{/if}}">
    {{#if readonly}}
        <div style="white-space:pre-wrap">{{value}}</div>
    {{else}}
        <textarea class="form-control">{{value}}</textarea>
        <div class="mirror-cont"></div>
    {{/if}}
</div>
