{{#if hide}}
    <a class="show-help" href="#" style="color:#6b3;font-size:12px"><i class="icon-question-sign"></i> Help</a>
{{else}}
    <div class="panel panel-info nf-panel-inline-help">
        <div class="panel-heading">
            <a class="close" href="#" style="margin-top:5px">&times;</a>
            <a class="hide-help" href="#" style="color:#fff;float:right;margin-top:5px;margin-right:30px;font-size:12px;line-height:20px">Hide This</a>
            <h3 class="panel-title">{{title}}</h3>
        </div>
        <div class="panel-body">
            <iframe src='/inline_help_body?action={{options.action}}' width="100%" height="0" marginheight="0" frameborder="0"></iframe>
        </div>
    </div>
{{/if}}
